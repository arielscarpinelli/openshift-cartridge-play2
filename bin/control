#!/bin/bash -e

function start {
    cd $OPENSHIFT_REPO_DIR
    echo
    echo "Starting play app"
    echo
    
    if [ ! -f target/universal/stage/bin/${PLAY_APP_NAME} ]
    then
      echo "App not deployed yet"
    else 
      nohup target/universal/stage/bin/${PLAY_APP_NAME} -Duser.home=${OPENSHIFT_DATA_DIR} -Dhttp.port=8080 -Dhttp.address=${OPENSHIFT_PLAY2_IP} -DapplyEvolutions.default=true -mem 512 > $OPENSHIFT_PLAY2_LOG_DIR/play.log 2>&1 &
    fi
    echo
}

function stop {
    killall java || true
}

function restart {
    stop
    start
}

function pre-build {
  echo
  echo "Installing activator"
  echo

  cd ${OPENSHIFT_DATA_DIR}
  curl ${ACTIVATOR_SOURCE_URL} > activator.zip
  unzip activator.zip
  rm activator.zip
  ln -s ${OPENSHIFT_DATA_DIR}/activator-${activatorV} ${OPENSHIFT_DATA_DIR}/activator  
}

function build {
    echo
    echo "Building (From control script)"
    echo
    activator clean stage
}

function tidy {
    shopt -s dotglob
    rm -rf $OPENSHIFT_TMP_DIR/*
}

function catchall {
    echo ""
}

case "$1" in
  start)       start ;;
  stop)        stop ;;
  restart)     restart ;;
  status)      status ;;
  reload)      catchall ;;
  tidy)        tidy ;;
  pre-build)   catchall ;;
  build)       build ;;
  deploy)      catchall ;;
  post-deploy) catchall ;;
  *)           exit 0
esac

exit 0
