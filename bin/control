#!/bin/bash -e

function start {
    cd $OPENSHIFT_HOMEDIR/app-root/runtime/
    # build on first time
    #rm -f target/universal/stage/RUNNING_PID
    
    # Lets abuse the deploy script
    echo
    echo "Starting (From control script)"
    echo
    
    if [ ! -f bin/messageboard-backend ]
    then
      echo "App not deployed yet"
      build
    else 
      nohup bin/messageboard-backend -Duser.home=${OPENSHIFT_DATA_DIR} -Dhttp.port=8080 -Dhttp.address=${OPENSHIFT_PLAY2_IP} -DapplyEvolutions.default=true -mem 512 > $OPENSHIFT_PLAY2_LOG_DIR/play.log 2>&1 &
    fi
    echo
}

function stop {
    killall java || true
}

function restart {
    stop
    start
}

function build {
    echo
    echo "Building (From control script)"
    echo
}

function tidy {
    shopt -s dotglob
    rm -rf $OPENSHIFT_TMP_DIR/*
}

function catchall {
    echo ""
}

case "$1" in
  start)       start ;;
  stop)        stop ;;
  restart)     restart ;;
  status)      status ;;
  reload)      catchall ;;
  tidy)        tidy ;;
  pre-build)   catchall ;;
  build)       build ;;
  deploy)      catchall ;;
  post-deploy) catchall ;;
  *)           exit 0
esac

exit 0
